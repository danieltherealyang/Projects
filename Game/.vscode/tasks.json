{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/EHsc",
				"/Fe:",
				"out.exe",
				"/MD",
				"*.cpp",
				"/link",
				"dependencies/*",
				"user32.lib",
				"gdi32.lib",
				"shell32.lib",
				"opengl32.lib"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cl.exe"
		}
	]
}